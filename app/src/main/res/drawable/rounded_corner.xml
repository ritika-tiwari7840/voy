<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state with theme_color stroke -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/foreground_field" />
            <corners android:radius="15dp"/>
            <stroke android:width="1dp" android:color="@color/theme_color" />
        </shape>
    </item>

    <!-- Default state with foreground_field stroke -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/foreground_field" />
            <corners android:radius="15dp"/>
            <stroke android:width="2dp" android:color="@color/foreground_field" />
        </shape>
    </item>

</selector>
